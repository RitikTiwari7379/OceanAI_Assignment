# Backend Environment Variables (.env)
# Copy this file to .env and fill in your actual values

# Secret key for JWT authentication (use a strong random string in production)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Google Gemini API key (get from https://ai.google.dev/tutorials/setup)
GEMINI_API_KEY=your-gemini-api-key-here

# CORS Origins - Comma-separated list of allowed frontend URLs
# For production, set this to your Vercel domain
CORS_ORIGINS=http://localhost:3000,https://your-vercel-url.vercel.app

# Database path (Railway will use SQLite, no config needed)
DATABASE_PATH=app.db
