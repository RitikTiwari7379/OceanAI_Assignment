# Backend Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit the .env file to git!

# Secret key for JWT token signing
# Generate a strong key using: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-to-a-strong-random-string

# Google Gemini API key
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# CORS origins (comma-separated list of allowed frontend URLs)
# Development: http://localhost:3000
# Production: https://your-frontend-url.vercel.app
CORS_ORIGINS=http://localhost:3000
